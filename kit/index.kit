<!DOCTYPE html>
<html>
	<head>
		<title>Road Trip</title>
        <!-- @import 'head', 'with-maps' -->
	</head>

    <body>
        <!--@import 'svgicons' -->
        <div class="page-wrap"> 
            <!--@import 'header' -->    
    		<div class="main-content">
                <aside> 
                    <nav class="app-nav">
                        <ul>    
                            <li><a href="choose.html">My Trips</a></li>
                            <li><a href="about.html">About</a></li>
                        </ul>
                    </nav>
                	<div class="sidebar-header">  
                    	<h1 class="trip-name"></h1>
                    	<h5><span class="trip-start-date"></span> to <span class="trip-end-date"></span></h5>
                	</div>
                    <div class="scroll-wrapper timeline" id="sidebar">
                    	<div class="scroll-content">
                    		<ul id="location-list" class="location-list">
                        		
                    		</ul>
                    	</div>
                    </div>
                </aside>
        		<main role="main">
            		<nav class="map-nav">   
                		<div class="map-nav-control">
                    		<a rel="prev" class="is-hidden"><svg class="icon"><use xlink:href="#icon-arrow-left"></use></svg> <span class="arrow-label">previous <span class="stop">stop</span></span></a>
                		</div>
                        <div class="map-nav-control control-counter">
                            <div class="stop-counter is-hidden">Stop #<span id="stop-number"></span></div>
                        </div>
                        <div class="map-nav-control">
                    		<a rel="next" class="is-hidden"><span class="arrow-label">next <span class="stop">stop</span></span> <svg class="icon"><use xlink:href="#icon-arrow-right"></use></svg></a>
                    		<a rel="begin"><svg class="icon"><use xlink:href="#icon-map"></use></svg> begin the journey</a>
                    		<a rel="startover" class="is-hidden"><svg class="icon"><use xlink:href="#icon-repeat"></use></svg> startover</a>
                		</div>
            		</nav>
            		<div class="map" id="map-canvas"></div>
        		</main>
    		</div>
    		<input type="checkbox" id="toggle2" class="checkbox-toggle">
    		<aside class="sidebar-gallery">
        		<label for="toggle2" class="gallery-close"><svg class="icon"><use xlink:href="#icon-arrow-left"></use></svg> hide</label>
        		<div class="gallery-header">
            		<h2>Stop #<span class="gallery-stop-number"></span></h2>
            		<h5 class="gallery-stop-name"></h5>            		
        		</div>  
        		
                <div id="sidebar-gallery" class="scroll-wrapper">
                	<div class="scroll-content">
                		<ul id="stop-gallery" class="sidebar-gallery-list">
                    		
                		</ul>
                	</div>
                </div>
    		</aside>
    		<div class="image-viewer-container is-hidden">
        		<div class="image-viewer">
            		<button class="image-viewer-close"><svg class="icon"><use xlink:href="#icon-close"></use></svg> close</button>
            		<div class="focal-image-frame">
                		<img class="focal-image">
            		</div>
            		<p class="image-caption"></p>
            		<ul class="image-nav">
                		<li>
                    		<a rel="prev"><svg class="icon"><use xlink:href="#icon-arrow-left"></use></svg></a>
                		</li>
                		<li class="image-marker">
                		    <span class="image-current"></span> of <span class="image-total"></span>
                		</li>
                		<li>
                    		<a rel="next"><svg class="icon"><use xlink:href="#icon-arrow-right"></use></svg></a>
                		</li>
            		</ul>              		
        		</div>
    		</div>  
        </div>        
        <!--@import 'footer', 'scroll-script','map-script' -->
	</body>
</html>
